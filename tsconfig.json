{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "lib": ["ES6"],
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "noEmit": true,
        "target": "ESNext",
        "noImplicitAny": true,
        "strict": false
    },
    "exclude": [
        "node_modules",
    ]
}